<h1> <%= @track.name%> </h1>

<%= link_to "Back to tracks list", album_url(@track.album_id)%>

<ul>
    <li> Band: <%= link_to @track.band.name, band_url(@track.band) %> </li>
	<li> Album: <%= link_to @track.album.name, album_url(@track.album) %> </li>
	<li> Type: <%= @track.track_type %></li>
	<li> Lyrics: <%= ugly_lyrics(@track.lyrics) %> </li>
</ul>

<%= render "notes/index", notes: @track.notes %>

<%= render "notes/new", track: @track %>

<%= link_to "Edit track", edit_track_url(@track) %>
<%= link_to "Delete track", track_url(@track), method: :delete%>
<%= link_to "Add new track", new_album_track_url(@track.album_id) %>